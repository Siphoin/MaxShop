@model Phone

<div class="card">
    <img src="@Model.ImageURL" alt="@Model.Name" style="width:100%">
    <h1>@Model.Name</h1>
    <p class="price">@Model.Price.ToString("c")</p>
    <p>@Model.ShortDecription</p>
    <a class="button28" asp-controller="ShopCart" asp-action="AddToCart" asp-route-id="@Model.Id">В корзину</a>
</div>